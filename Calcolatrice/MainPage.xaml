        <StackPanel Grid.Row="0" x:Name="CityName">
            <TextBlock Grid.Row="0"  Style="{StaticResource title}" Text="{Binding name}"/>
        </StackPanel>
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
            <Image Source="Assets/sun-with-cloud.png" Width="60" Margin="0, 10, 0, 0" />
            <TextBlock Grid.Row="1" HorizontalAlignment="Center" FontSize="80" FontWeight="Light" Text=" 20°"/>
        </StackPanel>
        <TextBlock Grid.Row="2" HorizontalAlignment="Center" FontSize="24" FontWeight="SemiLight" Text="Sunny" Margin="0, 0, 0, 6"/>
        <TextBlock Grid.Row="3" HorizontalAlignment="Center" FontSize="12" FontWeight="Medium" Text="Updated as of 9:11 PM"/>
        <StackPanel VerticalAlignment="Top" Grid.Row="4" Orientation="Vertical" Margin="0 , 14">
            <StackPanel HorizontalAlignment="Center" Grid.Row="4" Orientation="Horizontal" Spacing="20" Margin="0, 0, 0, 8">
                <TextBlock Style="{StaticResource weatherDetailInfo}" Text="Feels like 20°"/>
                <TextBlock Style="{StaticResource weatherDetailInfo}" Text="Wind 5km/h"/>
                <TextBlock Style="{StaticResource weatherDetailInfo}" Text="Visibility 6km"/>
            </StackPanel>

            <StackPanel HorizontalAlignment="Center" Grid.Row="4" Orientation="Horizontal" Spacing="20">
